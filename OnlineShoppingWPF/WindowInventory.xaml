<Window x:Class="OnlineShoppingWPF.WindowInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoppingWPF"
        mc:Ignorable="d"
        Title="WindowInventory" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Label Content=" Order History" HorizontalAlignment="Left" Margin="43,37,0,0" VerticalAlignment="Top" Width="130" Height="26"/>
        <ListView x:Name="OrderHistory" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="43,73,562,38" SelectionChanged="OrderHistory_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Inventory Stock" HorizontalAlignment="Left" Margin="252,37,0,0" VerticalAlignment="Top" Width="101" Height="26"/>
        <ListView x:Name="InventoryStock" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="252,73,353,38" SelectionChanged="InventoryStock_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="View Available Transport" Margin="465,37,73,0" VerticalAlignment="Top" Height="26"/>
        <ListView x:Name="ViewAvailableTransport" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="465,73,54,217" SelectionChanged="ViewAvaibleTransport_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content=" Delivery Status" Margin="465,224,213,184" Height="26"/>
        <ListView x:Name="DeliveryStatus" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="465,274,54,38" SelectionChanged="DeliveryStatus_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="send" Margin="662,224,54,184" Height="28"/>

    </Grid>
</Window>
